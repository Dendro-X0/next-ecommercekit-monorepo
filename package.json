{
  "name": "next-ecommerce-starterkit-monorepo",
  "version": "1.2.0",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.13.1"
  },
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:safe": "cross-env NEXT_PUBLIC_SAFE_HOME=true pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "turbo run lint",
    "format": "biome check --write .",
    "format:check": "biome check .",
    "lint:biome": "biome lint .",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "db:generate": "pnpm --filter @repo/db db:generate",
    "db:migrate": "pnpm --filter @repo/db db:migrate",
    "db:push": "pnpm --filter @repo/db db:push",
    "db:seed": "pnpm --filter @repo/db db:seed"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "cross-env": "^10.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^3.9.2",
    "@stripe/stripe-js": "^7.9.0",
    "stripe": "^18.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dendro-X0/next-ecommerce-starterkit.git"
  },
  "bugs": {
    "url": "https://github.com/Dendro-X0/next-ecommerce-starterkit/issues"
  },
  "homepage": "https://github.com/Dendro-X0/next-ecommerce-starterkit#readme"
}
