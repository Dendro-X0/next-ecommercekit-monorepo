{
  "name": "@repo/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts",
    "./auth-schema": "./src/auth-schema.ts",
    "./repositories/products-repo": "./src/repositories/products-repo.ts"
  },
  "scripts": {
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts",
    "db:push": "drizzle-kit push --config=drizzle.config.ts",
    "db:seed:products": "node ./scripts/seed-products.mjs",
    "db:seed:affiliate": "node ./scripts/seed-affiliate.mjs",
    "db:seed:reviews": "node ./scripts/seed-reviews.mjs",
    "db:seed": "node ./scripts/seed-products.mjs && node ./scripts/seed-affiliate.mjs && node ./scripts/seed-reviews.mjs",
    "test": "vitest run"
  },
  "dependencies": {
    "@neondatabase/serverless": "*",
    "drizzle-orm": "^0.44.5",
    "zod": "*"
  },
  "devDependencies": {
    "@types/node": "*",
    "dotenv": "*",
    "drizzle-kit": "^0.31.4",
    "typescript": "*",
    "vitest": "^3.2.4"
  }
}
