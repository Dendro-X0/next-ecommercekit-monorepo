# Environment configuration for local development
# Copy to apps/web/.env.local if you prefer per-app files. These keys are used by Next.js app and co-located API routes.
# See ENV_SETUP.md for explanations and minimal sets for dev/prod.

# ---------- Core ----------
# Database
DATABASE_URL=

# Origins
APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---------- Frontend (UI) toggles ----------
# Minimal-boot disables heavy providers in dev; set to false to enable full auth/header updates.
NEXT_PUBLIC_BOOT_MINIMAL=false
# When true, the UI assumes no backend; leave false for real auth/session.
NEXT_PUBLIC_FRONTEND_ONLY=false
# Disable header interactivity entirely (rarely needed)
NEXT_PUBLIC_DISABLE_HEADER_INTERACTIONS=false
# Disable the auth island (login/avatar) entirely (rarely needed)
NEXT_PUBLIC_DISABLE_AUTH_ISLAND=false
# Hide the announcement banner (set to true to hide). Defaults to visible.
NEXT_PUBLIC_DISABLE_ANNOUNCEMENT_BAR=false

# ---------- Authentication ----------
BETTER_AUTH_SECRET=
# For local HTTP development, keep this false to avoid Secure/None cookies being dropped by the browser.
ENABLE_CROSS_SITE_COOKIES=false
ENABLE_CROSS_SUBDOMAIN_COOKIES=false

# OAuth providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ---------- Admin ----------
# Comma-separated list of admin emails
ADMIN_EMAILS=
# Frontend allowlist (optional). If unset, ADMIN_EMAILS is used as a fallback.
NEXT_PUBLIC_ADMIN_EMAILS=

# ---------- Emails ----------
# Resend (preferred in prod)
RESEND_API_KEY=
EMAIL_FROM=

# SMTP (local/dev). Set MAIL_PROVIDER=SMTP to use these instead of Resend
MAIL_PROVIDER=
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# ---------- Rate Limiting ----------
API_RATE_LIMIT_MAX=120
API_RATE_LIMIT_WINDOW_MS=60000
CONTACT_RATE_LIMIT_MAX=5
CONTACT_RATE_LIMIT_WINDOW_MS=60000

# ---------- Payments ----------
# Stripe
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=

# ---------- Media Storage ----------
# Select provider: s3 | cloudinary (defaults to s3 when S3_* present)
STORAGE_PROVIDER=s3

# S3 (or any S3‑compatible service). When unset, uploads fall back to local disk.
S3_REGION=
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
# Optional for S3‑compatible services (e.g., R2/MinIO)
S3_ENDPOINT=
S3_PUBLIC_BASE_URL=
S3_FORCE_PATH_STYLE=false
# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_PUBLIC_BASE_URL=
# Upload limits (MB)
MAX_UPLOAD_MB=25
MEDIA_DAILY_LIMIT=200

# Media worker (video previews)
FFMPEG_PATH=ffmpeg
MEDIA_PREVIEW_SECONDS=6
MEDIA_WORKER_POLL_MS=5000
MEDIA_WORKER_LOOKBACK_MS=86400000

# ---------- Redis (Upstash) ----------
# Optional: enable distributed rate limiting in production
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
